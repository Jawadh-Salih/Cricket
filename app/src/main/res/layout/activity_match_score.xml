<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/link_text_material_dark"
    tools:context="com.example.jawadh.cricket.MatchScore">

    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="@dimen/topic_text_size"
        android:weightSum="120"
        android:id="@+id/topicplayerscore">
        <TextView
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="30"
            android:text="Name"
            android:gravity="center"
            android:textSize="@dimen/text_size"
            android:id="@+id/nameplayer" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="30"
            android:text="Score"
            android:gravity="center"
            android:textSize="@dimen/text_size"
            android:id="@+id/scoreplayer" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="30"
            android:text="Balls"
            android:gravity="center"
            android:textSize="@dimen/text_size"
            android:id="@+id/ballsfaced"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:layout_weight="30"
            android:text="S.Rate"
            android:gravity="center"
            android:textSize="@dimen/text_size"
            android:id="@+id/strikerate"/>
    </TableRow>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/topicplayerscore"
        android:id="@+id/playerlist">
    </ListView>

</RelativeLayout>
