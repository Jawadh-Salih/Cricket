<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/link_text_material_dark"
    tools:context="com.example.jawadh.cricket.ViewPlayer">

    <!-- In this page have to
    code for player view. make a design and code.
    dont be lazy
    There must be a back -->
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:inputType="textPersonName"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        android:textSize="70dp"
        android:text="Jawadh"
        android:id="@+id/playerUsername" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/playerUsername"
        android:layout_centerHorizontal="true"
        android:text="Jawadh Salih Rifath"
        android:textSize="50dp"
        android:id="@+id/playerName" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@+id/playerName"
        android:text="22 yrs"
        android:textSize="40dp"
        android:id="@+id/playerAge"/>
    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_below="@id/playerAge"
        android:layout_marginTop="20dp"
        android:weightSum="80"
        android:id="@+id/playerdetailTopic">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="20"
            android:gravity="center"
            android:text="Total Score"
            android:textAlignment="center"
            android:textSize="15dp"
            android:id="@+id/playerScore"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="20"
            android:text="Sixes"
            android:gravity="center"
            android:textAlignment="center"
            android:textSize="15dp"
            android:id="@+id/playerSixes"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="20"
            android:gravity="center"
            android:text="Fours"
            android:textAlignment="center"
            android:textSize="15dp"
            android:id="@+id/playerFours"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="20"
            android:gravity="center"
            android:text=" S/ Rate"
            android:textAlignment="center"
            android:textSize="15dp"
            android:id="@+id/playerSRate"/>

    </TableRow>
    <TableRow
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_below="@id/playerdetailTopic"
        android:layout_margin="0dp"
        android:weightSum="80"
        android:id="@+id/playerValues">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="20"
            android:gravity="center"
            android:text="1200"
            android:textAlignment="center"
            android:textSize="20dp"
            android:id="@+id/scoreValue"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="20"
            android:text="20"
            android:gravity="center"
            android:textAlignment="center"
            android:textSize="20dp"
            android:id="@+id/sixCount"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="20"
            android:gravity="center"
            android:text="43"
            android:textAlignment="center"
            android:textSize="20dp"
            android:id="@+id/fourCount"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="20"
            android:gravity="center"
            android:text=" 120.4 %"
            android:textAlignment="center"
            android:textSize="20dp"
            android:id="@+id/strikeRate"/>

    </TableRow>
    <Button
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/playerValues"
        android:layout_marginBottom="10dp"
        android:text="Save"
        android:textSize="30dp"
        android:id="@+id/saveEdits"
        android:onClick="updatePlayerEditions"/>


</RelativeLayout>
